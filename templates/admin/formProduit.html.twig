{% extends 'layout.html.twig' %}

{% block title %}Les Produits
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-4 mx-auto">
			<h1 class="display-4 my-5 text-center">ENREGISTRER UN PRODUIT</h1>

			{{ form_start(formProduit) }}
			{{ form_row(formProduit.titre) }}
			{{ form_row(formProduit.marque) }}
            {{ form_row(formProduit.description) }}
            {{ form_row(formProduit.photo) }}
            {{ form_row(formProduit.prix) }}
			{{ form_row(formProduit.stock) }}
			{{ form_row(formProduit.peau) }}
            {{ form_row(formProduit.categorie) }}

			<button type="submit" class="btn btn-outline-primary w-100">Enregistrer</button>

			{{ form_end(formProduit) }}
		</div>
	</div>
{% endblock %}
